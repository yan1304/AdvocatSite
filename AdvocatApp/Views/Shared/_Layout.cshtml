@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <div id="#header">
        <div class="navbar navbar-default">
            <div class="container">
                <h2 id="header1">@ViewBag.NameOfSite</h2>
                <div class="rightMobile">
                    @if (ViewBag.Phone != null)
                    {
                        <p>Телефон: <tel>@ViewBag.Phone</tel></p>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="navbar navbar-default navbar-1">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="navbar-brand"> </div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("На главную", "Index", "Home")</li>
                    <li>@Html.ActionLink("О нас", "About", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="row">
        <div id="admin-content" class="col-md-10 col-md-offset-1">
            @RenderBody()
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
