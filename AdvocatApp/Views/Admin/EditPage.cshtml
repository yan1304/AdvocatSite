@model AdvocatApp.Models.PageModel
@{
    ViewBag.Title = "Редактирование статьи";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
    <h2>EditPage</h2>

@using(Html.BeginForm("EditPage", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Редактирование статьи</h4>
    <hr />
    @Html.ValidationSummary(true)

    @Html.HiddenFor(m => m.Date)
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.Type)

    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-8">
            @Html.EditorFor(model => model.Name)
        </div>
        <div class="col-sm-2">
            @Html.ValidationMessageFor(model => model.Name)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Header, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-8">
            @Html.EditorFor(model => model.Header)
        </div>
        <div class="col-sm-2">
            @Html.ValidationMessageFor(model => model.Header)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Text, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-8">
            @Html.EditorFor(model => model.Text)
        </div>
        <div class="col-sm-2">
            @Html.ValidationMessageFor(model => model.Text)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.VideoURL, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-8">
            @Html.EditorFor(model => model.VideoURL)
        </div>
        <div class="col-sm-2">
            @Html.ValidationMessageFor(model => model.VideoURL)
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" class="btn btn-default" value="Сохранить" />
        </div>
    </div>
}
